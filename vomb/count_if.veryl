module count_if::<N: const, T: type, PredOp: proto_pred_op>(
    a : input T[N],
    b : input T[N],
    o : output logic<$clog2(N+1)>
){
    var pred_result : logic<$clog2(N+1)>[N];
    for n in 0..N : g_pred{
        inst pred : PredOp(
            a : a[n],
            b : b[n],
            o : pred_result[n][0]
        );
        assign pred_result[n][$clog2(N+1)-1:1] = 0;
    }

    inst accumulator : reduction::<N, T, binop_add>(
        i : pred_result,
        o : o
    );
}